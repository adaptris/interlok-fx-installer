<VBox fx:controller="com.adaptris.fxinstaller.controllers.InstallProgressController" 
    xmlns:fx="http://javafx.com/fxml" styleClass="install-progress" spacing="10">
    
	<padding><Insets top="100" right="20" bottom="20" left="20"/></padding>
	
	<children>
		<Label text="Installing Interloks"></Label>
		<GridPane prefWidth="750" prefHeight="430" alignment="top_left" hgap="10" vgap="0" styleClass="grid">
		
			<padding><Insets top="0" bottom="0" /></padding>
			
			<children>
				<VBox spacing="10">
					<ProgressBar fx:id="progressBar" prefWidth="750"></ProgressBar>
					<TextArea fx:id="textArea" editable="false" prefWidth="750" prefHeight="350"></TextArea>
					<Label fx:id="finishedLabel" text=""></Label>
				</VBox>
			</children>
		</GridPane>
		<HBox spacing="10" alignment="center_right">
			<Button fx:id="downloadGradleFileButton" text="Download gradle files" disable="true" onAction="#handleDownloadGradleFile"></Button>
			<Button fx:id="exitButton" text="Exit" disable="true" onAction="#handleExit"></Button>
		</HBox>
	</children>
	<stylesheets>
		<URL value="@/css/install_progress.css" />
	</stylesheets>
</VBox>

